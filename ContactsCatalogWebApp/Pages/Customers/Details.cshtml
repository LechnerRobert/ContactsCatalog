@page
@model ContactsCatalogWebApp.Pages.Customers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>CustomerItemDTO</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerItemDTO.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerItemDTO.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerItemDTO.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerItemDTO.Number)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.CustomerItemDTO?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>


<p>
    <a asp-page="../Contacts/Create" asp-route-customerID="@Model.CustomerItemDTO?.Id">Create New Contact</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerItemDTO.Contacts.FirstOrDefault().FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerItemDTO.Contacts.FirstOrDefault().LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerItemDTO.Contacts.FirstOrDefault().PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerItemDTO.Contacts.FirstOrDefault().EMail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerItemDTO.Contacts.FirstOrDefault().Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CustomerItemDTO.Contacts)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Number)
            </td>
            <td>
                    <a asp-page="../Contacts/Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="../Contacts/Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="../Contacts/Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
